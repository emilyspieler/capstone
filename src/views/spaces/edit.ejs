<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body id="edit">
    <% include ../static/partials/navbar.ejs %>
    <% include ../static/partials/messages.ejs %>

    <main id="edit" class="container">
    <div id="content">
      <header class="jumbotron my-4">
      <h2>Edit Space</h2>

        <form action="/spaces/<%= space.id %>/update" method="post">
          <div class="form-group">
          <label for="title">Location title</label>
          <input value="<%= space.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
          </div>
          <div class="form-group">
          <label for="description">Description</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= space.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
    </main>
  </header>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
